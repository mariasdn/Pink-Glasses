{
  "name": "Pink Glasses",
  "version": "1.0",
  "description": "See the world through pink glasses!",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/pink_glasses16.png",
      "32": "images/pink_glasses32.png",
      "48": "images/pink_glasses48.png",
      "128": "images/pink_glasses128.png"
    }
  },
  "icons": {
    "16": "images/pink_glasses16.png",
    "32": "images/pink_glasses32.png",
    "48": "images/pink_glasses48.png",
    "128": "images/pink_glasses128.png"
  },
  "manifest_version": 2
}